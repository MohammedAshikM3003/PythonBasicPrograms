board=[' ']*9;show=lambda:print(f"{board[0]}|{board[1]}|{board[2]}\n-+-+-\n{board[3]}|{board[4]}|{board[5]}\n-+-+-\n{board[6]}|{board[7]}|{board[8]}");win=lambda p:any(board[a]==board[b]==board[c]==p for a,b,c in[(0,1,2),(3,4,5),(6,7,8),(0,3,6),(1,4,7),(2,5,8),(0,4,8),(2,4,6)]);p='X';[show()or((lambda m:(board.__setitem__(m,p) if board[m]==' ' else None))(int(input(f"Player {p}, choose 1-9: "))-1) or (show()or print(f'Player {p} wins!') or exit() if win(p) else None) or (p:='O' if p=='X' else 'X'))for _ in range(9)];show();print("It's a draw!")